<?xml version="1.0"?>
<component name="org.nuxeo.labs.rating.ui.widgettypes">
    <extension
            target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
            point="widgettypes">

        <widgetType name="doc_graph">
            <configuration>
                <title>Document Graph</title>
                <description>
                    <p>
                        Document Graph Widget
                    </p>
                </description>
                <supportedModes>
                    <mode>view</mode>
                </supportedModes>
            </configuration>
            <handler-class>
                org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
            </handler-class>
            <property name="template">/graph-view/doc_graph.xhtml</property>
        </widgetType>

        <widgetType name="doc_graph_force">
            <configuration>
                <title>Document Graph Force</title>
                <description>
                    <p>
                        Document Graph Force Widget
                    </p>
                </description>
                <supportedModes>
                    <mode>view</mode>
                </supportedModes>
            </configuration>
            <handler-class>
                org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
            </handler-class>
            <property name="template">/graph-view/doc_graph_force.xhtml</property>
        </widgetType>

    </extension>


</component>
