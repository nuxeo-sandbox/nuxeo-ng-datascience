<?xml version="1.0"?>

<component name="org.nuxeo.datascience.analytics" version="1.0">

<extension target="org.nuxeo.ecm.platform.actions.ActionService" point="actions">

    
    <action id="ChannelAnalytics" link="/analytics/channelAnalytics.xhtml"
            type="rest_document_link"
            label="Channel Analytics" order="80">
      <category>VIEW_ACTION_LIST</category>
      <filter id="channelAnalytics">
        <rule grant="true">
            <type>Channel</type>
        </rule>
    </filter>
      <properties>
        <!-- disable ajax support to avoid multiple calls to document.registerElement -->
        <property name="ajaxSupport">false</property>
      </properties>
    </action>
    
    <action id="ChannelSpaceAnalytics" link="/analytics/datascienceAnalytics.xhtml"
            type="rest_document_link"
            label="Analytics" order="80">
      <category>VIEW_ACTION_LIST</category>
      <filter id="datascienceAnalytics">
        <rule grant="true">
            <type>ChannelSpace</type>
        </rule>
    </filter>
      <properties>
        <!-- disable ajax support to avoid multiple calls to document.registerElement -->
        <property name="ajaxSupport">false</property>
      </properties>
    </action>

  </extension>


</component>
